<div class="jumbotron text-center">
  <h1>Welcome to MediumLike</h1>
  <br><br>
  <h2>Here is the lastest posts!</h2>
  <hr>
</div>



<% @posts.each do |post| %>
  <div class="container p-3 my-3 rounded", style="border:1px solid #000000;"> 
    <% if user_signed_in? %>
      <h2 style="text-align:center"><%= link_to post.title.upcase, post_path(post) %></h2>
      <h4> <%= post.content.truncate(50) %> </h4>
      <br>
      <h6 style="text-align:center"> By: <%= link_to post.user.username, profile_path(post.user) %> </h6> 
    <% else %>
      <h2>"<%= post.title %>" by <%= post.user.username %></h2>
    <% end %>
  </div>
<% end %>

<% unless user_signed_in? %>
  <div class="jumbotron text-center">
    <h2>Sign Up or Login to Access more</h2>
  </div>
<% end %>
      